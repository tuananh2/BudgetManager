<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id = "@+id/history_root_menu">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_bright"
        android:paddingTop="3pt"
        android:paddingBottom="3pt">

        <TextView
            android:textColor="#ffffff"
            android:text="Daily"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/daily_history"
            android:layout_weight="0.25"
            android:gravity="center_horizontal" />

        <TextView
            android:textColor="#ffffff"
            android:text="Weekly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/weekly_history"
            android:layout_weight="0.25"
            android:gravity="center_horizontal" />

        <TextView
            android:textColor="#ffffff"
            android:text="Monthly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/monthly_history"
            android:layout_weight="0.25"
            android:gravity="center_horizontal" />

        <TextView
            android:textColor="#ffffff"
            android:text="Calendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/calendar_history"
            android:layout_weight="0.25"
            android:gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/red_border_background"
        android:paddingTop="2pt"
        android:paddingBottom="2pt">

        <TextView
            android:text="Income"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/total_income"
            android:layout_weight="0.3"
            android:gravity="center_horizontal" />

        <TextView
            android:text="Expense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/total_expense"
            android:layout_weight="0.3"
            android:gravity="center_horizontal" />

        <TextView
            android:text="Remain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/total_remain"
            android:layout_weight="0.3"
            android:gravity="center_horizontal" />
    </LinearLayout>
</LinearLayout>